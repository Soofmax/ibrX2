# Example environment variables
# Copy to .env and adjust for your environment

# Client analytics (optional; only load when set and with user consent)
VITE_PLAUSIBLE_DOMAIN=
VITE_UMAMI_SRC=
VITE_UMAMI_WEBSITE_ID=
VITE_GA_ID=

# Server (Netlify Functions)
SITE_URL=https://wanderglobers.com
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
ALLOWED_ORIGINS=https://wanderglobers.com,https://www.wanderglobers.com
# Optional: override the in-memory rate limit max requests per minute
RATE_LIMIT_MAX=20

# Durable rate limiting / idempotency store (optional but recommended)
# If set, functions will use Upstash Redis REST API for rate limiting & webhook deduplication
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=