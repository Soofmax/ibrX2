void    ft_putchar(char c);

void    print_line(int x, char left, char mid, char right)
{
    int    i;

    if (x <= 0)
        return ;
    ft_putchar(left);
    i = 1;
    while (i < x - 1)
    {
        ft_putchar(mid);
        i++;
    }
    if (x > 1)
        ft_putchar(right);
    ft_putchar('\n');
}

void    rush(int x, int y)
{
    int    j;

    if (x <= 0 || y <= 0)
        return ;
    print_line(x, 'o', '-', 'o');
    j = 1;
    while (j < y - 1)
    {
        print_line(x, '|', ' ', '|');
        j++;
    }
    if (y > 1)
        print_line(x, 'o', '-', 'o');
}